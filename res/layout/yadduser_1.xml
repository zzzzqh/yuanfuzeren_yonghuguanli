
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.text.Yadduser_1"
 >
    
    
     <LinearLayout
        android:id="@+id/adduser_title1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@color/purple"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="用户信息核对"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </LinearLayout>
    
        
   <LinearLayout
            android:id="@+id/adduser_edit_layout1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/adduser_title1"
         android:background="@drawable/login_layout_editor_bg"
         android:orientation="vertical" >


        <ListView
            android:id="@+id/adduser_xinxi"
            android:layout_width="312dp"
            android:layout_height="354dp" >
        </ListView>
       
     </LinearLayout>

        <Button
            android:id="@+id/adduser_1_button2"
            android:layout_width="80dp"
            android:layout_height="42dp"
            android:layout_alignBaseline="@+id/adduser_1_button1"
            android:layout_alignBottom="@+id/adduser_1_button1"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/adduser_1_button1"
            android:background="@color/purple"
            android:text="取消"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/adduser_1_button1"
            android:layout_width="160dp"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@color/purple"
            android:text="确认"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    
    </RelativeLayout>


